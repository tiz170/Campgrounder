        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                <!-- //below line otherwise gonna show two overlapped X -->
                <!-- <span aria-hidden="true">&times;</span> -->
            </button>
    </div>
    <% } %>

